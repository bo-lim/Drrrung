<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RatingActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        android:paddingTop="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/wakeup1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo_da"
            android:gravity="center"
            android:text="@string/wake_upMSG1"
            android:textAllCaps="false"
            android:textColor="#E91E63"
            android:textSize="70sp" />

        <TextView
            android:id="@+id/wakeupMSG2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="monospace"
            android:text="@string/wakeupMSG2"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageButton
                android:id="@+id/star1"
                android:layout_width="@dimen/star_width"
                android:layout_height="match_parent"
                android:layout_margin="-10px"
                android:contentDescription="@string/emptystar"
                android:padding="-1dp"
                android:scaleType="fitCenter"
                android:background="#00ff"
                app:srcCompat="@drawable/empty_star" />

            <ImageButton
                android:id="@+id/star2"
                android:layout_width="@dimen/star_width"
                android:layout_height="wrap_content"
                android:contentDescription="@string/emptystar"
                android:padding="-1dp"
                android:scaleType="fitCenter"
                android:background="#00ff"
                app:srcCompat="@drawable/empty_star" />

            <ImageButton
                android:id="@+id/star3"
                android:layout_width="@dimen/star_width"
                android:layout_height="wrap_content"
                android:contentDescription="@string/emptystar"
                android:background="#00ff"
                app:srcCompat="@drawable/empty_star" />

            <ImageButton
                android:id="@+id/star4"
                android:layout_width="@dimen/star_width"
                android:layout_height="wrap_content"
                android:contentDescription="@string/emptystar"
                android:background="#00ff"
                app:srcCompat="@drawable/empty_star" />

            <ImageButton
                android:id="@+id/star5"
                android:layout_width="@dimen/star_width"
                android:layout_height="wrap_content"
                android:contentDescription="@string/emptystar"
                android:background="#00ff"
                app:srcCompat="@drawable/empty_star" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>